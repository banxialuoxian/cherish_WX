}

.gg .active {
  color:#31c594;
border:solid 1px #31c594;

}

.add-space-block {
  width: 65rpx;
  height: 51rpx;
  line-height: 50rpx;
  float: left;
  text-align: center;
  margin: 50rpx 0 0 40rpx;
  font-size: 16px;
  border-radius: 10px;
  color: #484848;
  border: 1px dashed #f2f2f2;
  padding: 0px 24px;
}

/*确认添加存储地*/

.confirm-space-block {
  width: 40rpx;
  height: 41rpx;
  float: left;
  margin: 58rpx 0 0 20rpx;
}

/*取消添加存储地*/

.cancle-space-block {
  width: 38rpx;
  height: 36rpx;
  float: left;
  margin: 63rpx 0 0 10px;
}

/*取消按钮*/

.cancle-image {
  width: 25px;
  height: 24px;
  display: inline;
  position: absolute;
  top: 10px;
}

/*确定按钮*/

.confirm-image {
  width: 25px;
  height: 24px;
  right: 15px;
  display: inline;
  position: absolute;
  top: 10px;
}

/*选中的存储地*/

.space-selected {
  font-size: 16px;
  color: #808080;
  margin-left: 223px;
  display: inline-block;
  padding-bottom: 2px;
  margin-top: 9px;
}

